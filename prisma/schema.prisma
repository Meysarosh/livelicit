generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name     String
  email     String    @unique
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  bids      Bid[]
  items     Item[]
  auctions  Auction[] @relation("AuctionOwner")
  tokenVersion  Int    @default(0)
  stopRequests        StopRequest[] @relation("StopRequestSeller")
  decidedStopRequests StopRequest[] @relation("StopRequestAdmin")
}

model Item {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  images      String[] // tárolható JSONB-ként
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     Int
  auction     Auction[]
}

model Auction {
  id            Int      @id @default(autoincrement())
  item          Item     @relation(fields: [itemId], references: [id])
  itemId        Int
  startsAt      DateTime
  endsAt        DateTime
  startingPrice Decimal  @db.Decimal(12,2)
  minIncrement  Decimal  @db.Decimal(12,2)
  currentPrice  Decimal  @db.Decimal(12,2)
  status        AuctionStatus @default(SCHEDULED)
  endReason     AuctionEndReason?
  reservePrice  Decimal? @db.Decimal(12,2)
  softCloseSec  Int      @default(120) // anti-sniping window
  bids          Bid[]
  owner         User     @relation("AuctionOwner", fields: [ownerId], references: [id])
  ownerId       Int
  winnerBidId   Int?
  finalPrice    Decimal? @db.Decimal(12,2) // optional cache of winning amount

  stopRequests  StopRequest[]

  @@index([status, endsAt])
  @@index([itemId, status])
  // keep unique active per item (partial index in migration SQL)
}

model Bid {
  id        Int      @id @default(autoincrement())
  auction   Auction  @relation(fields: [auctionId], references: [id])
  auctionId Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  amount    Decimal  @db.Decimal(12,2)
  createdAt DateTime @default(now())
  @@index([auctionId, createdAt])
}
model StopRequest {
  id          Int               @id @default(autoincrement())
  auction     Auction           @relation(fields: [auctionId], references: [id])
  auctionId   Int
  seller      User              @relation("StopRequestSeller", fields: [sellerId], references: [id])
  sellerId    Int
  reason      String            @db.Text
  status      StopRequestStatus @default(PENDING)
  createdAt   DateTime          @default(now())
  decidedAt   DateTime?
  decidedById Int?
  decidedBy   User?             @relation("StopRequestAdmin", fields: [decidedById], references: [id])
}

enum Role {
  ADMIN
  USER
}

enum AuctionStatus { 
  SCHEDULED 
  ACTIVE 
  ENDED 
  CANCELED 
  }
enum AuctionEndReason {
  NORMAL_WINNER
  NO_BIDS
  RESERVE_NOT_MET
  CANCELED_SELLER_BEFORE_START
  CANCELED_ADMIN
  FORCE_CLOSED_ADMIN
  BUY_NOW
}
enum StopRequestStatus { 
  PENDING 
  APPROVED 
  REJECTED 
  }

